<%- include ./partical/patientHeader %>
<div class="container">
    <br>
    <div class="container-fluid">
        <div class="row container">
            <form action="/hospital/patient" method="post" class="col-12">
                <div class="row">
                    <div class="col-md-6 form-group">
                        <label>Patient Name</label>
                            <input class="form-control" type="text" name="name" value="User" disabled>
                    </div>
                    <div class="col-lg-6 form-group">
                        <label class="elias">Patient Id</label>
                        <input type="text" class="form-control" name="lastname" value="21SHJ930D" disabled>
                    </div>
                </div>
                <div class="row">
                   <div class="col-lg-6 form-group">
                        <label>City</label>
                        <input type="text" class="form-control" name="city" placeholder="City">
                    </div>
                    <div class="col-lg-6 form-group">
                        <label>Department</label>
                        <select name="gender" class="form-control">
                            <option value="Male">Dentist</option>
                            <option value="Female">Neurological</option>
                            <option value="Other">Surgical</option>
                            <option value="Other">Ophthalmology</option>
                            <option value="Other">Cardiology</option>
                            <option value="Other">Other</option>
                        </select>
                    </div>
                </div>
                <div class="row">
                        <div class="col-lg-6 form-group">
                            <label>Date of apointment</label>
                            <input type="date" class="form-control" name="dob">
                        </div>
                    <div class="col-lg-6 form-group">
                        <label>Time of apointment</label>
                        <input type="time" class="form-control" name="dob">
                    </div>
                </div>
                <div class="form-group">
                    <textarea name="" id="" cols="30" rows="7" class="form-control" placeholder="Describe your Illeness Symptom"></textarea>
                  </div>
                <button class="btn btn-success"><a href="#" style="text-decoration: none; color: #ffffff">Submit</a></button>
            </form>
        </div>
    </div>
    <br>
</div>
