<%- include ./partical/patientHeader %>

<div class="container">
    <br>
    <div class="container-fluid">
        <div class="row container">
            <form action="/hospital/patient/make-appointment-with-a-doctor" method="post" class="col-12">
                <div class="row">
                    <div class="col-md-6 form-group">
                        <label>Patient Name</label>
                            <input class="form-control" type="text" name='' value="User" disabled>
                    </div>
                    <div class="col-lg-6 form-group">
                        <label class="elias">Patient Id</label>
                        <input type="text" class="form-control" name="lastname" value="21SHJ930D" disabled>
                    </div>
                </div>
                <div class="row">
                   <div class="col-lg-6 form-group">
                        <label>City</label>
                        <input type="text" class="form-control" name="city" placeholder="City" value="<%= appointment.city%>">
                    </div>
                    <div class="col-lg-6 form-group">
                        <label>Services</label>
                        <select name="service" class="form-control">
                                <option value="<%= appointment.service%>"  disabled selected><%= appointment.service%></option>
                            <option value="Dentist">Dentist</option>
                            <option value="Neurological">Neurological</option>
                            <option value="Surgical">Surgical</option>
                            <option value="Ophthalmology">Ophthalmology</option>
                            <option value="Cardiology">Cardiology</option>
                            <option value="Other">Other</option>
                        </select>
                    </div>
                </div>
                <div class="row">
                        <div class="col-lg-6 form-group">
                            <label>Date of apointment</label>
                            <input type="date" class="form-control" name="date" value="<%= appointment.date%>">
                        </div>
                    <div class="col-lg-6 form-group">
                        <label>Time of apointment</label>
                        <input type="time" class="form-control" name="time" value="<%= appointment.time%>">
                    </div>
                </div>
                <div class="form-group">
                    <textarea name="comment" id="" cols="30" rows="7" class="form-control" placeholder="Describe your Illeness Symptom"><%= appointment.comment%></textarea>
                  </div>
                <a href="#" class="btn btn-danger delete-appointment">Delete</a>
                <a href="/hospital/patient/view-appointment-make" class="btn btn-secondary justify-content-end">Back</a>                
            </form>
        </div>
    </div>
    <br>
</div>

<%- include ./partical/docFooter %>